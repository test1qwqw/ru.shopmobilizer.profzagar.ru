<?xml version='1.0' encoding='utf-8'?>
<widget
  xmlns       = "http://www.w3.org/ns/widgets"
  xmlns:gap   = "http://phonegap.com/ns/1.0"
  id          = "ru.shopmobilizer.profzagar.ru"
  version     = "16.11.16"
  versionCode = "161116"
>
  <name>Интернет-магазин косметики для солярия и для загара на солнце</name>
  <author
    href="http://shopmobilizer.ru"
    email="info@shopmobilizer.ru">ShopMobilizer.ru
  </author>
  <description>profzagar.ru</description>
  <preference name="phonegap-version" value="cli-6.3.0"/>
  <preference name="fullscreen" value="true"/>
  <preference name="permissions" value="none"/>

  <icon src="icon.png"/>

  <platform name="android">
    <splash src="logo.png"/>
  </platform>

  <platform name="ios">
    <preference name="target-device" value="universal"/>
    <preference name="detect-data-types" value="false"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <!-- iPhone 6 / 6+ -->
    <icon   src="icon-60@3x.png"                width="180"  height="180"/>
    <!-- iPhone / iPod Touch  -->
    <icon   src="icon-60.png"                   width="60"   height="60"/>
    <icon   src="icon-60@2x.png"                width="120"  height="120"/>
    <!-- iPad -->
    <icon   src="icon-76.png"                   width="76"   height="76"/>
    <icon   src="icon-76@2x.png"                width="152"  height="152"/>
    <!-- Settings Icon -->
    <icon   src="icon-small.png"                width="29"   height="29"/>
    <icon   src="icon-small@2x.png"             width="58"   height="58"/>
    <!-- Spotlight Icon -->
    <icon   src="icon-40.png"                   width="40"   height="40"/>
    <icon   src="icon-40@2x.png"                width="80"   height="80"/>
    <!-- iPhone / iPod Touch -->
    <icon   src="icon-.png"                     width="57"   height="57"/>
    <icon   src="icon@2x.png"                   width="114"  height="114"/>
    <!-- iPad -->
    <icon   src="icon-72.png"                   width="72"   height="72"/>
    <icon   src="icon-72@2x.png"                width="144"  height="144"/>
    <!-- iPad Spotlight and Settings Icon -->
    <icon   src="icon-50.png"                   width="50"   height="50"/>
    <icon   src="icon-50@2x.png"                width="100"  height="100"/>

    <!-- iPhone and iPod touch -->
    <splash src="Default.png"                   width="320"  height="480"/>
    <splash src="Default@2x.png"                width="640"  height="960"/>
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="Default-568h@2x.png"           width="640"  height="1136"/>
    <!-- iPhone 6 -->
    <splash src="Default-667h@2x.png"           width="750"  height="1334"/>
    <splash src="Default-Portrait-736h@3x.png"  width="1242" height="2208"/>
    <splash src="Default-Landscape-736h@3x.png" width="2208" height="1242"/>
    <!-- iPad -->
    <splash src="Default-Portrait.png"          width="768"  height="1024"/>
    <splash src="Default-Landscape.png"         width="1024" height="768"/>
    <!-- Retina iPad -->
    <splash src="Default-Portrait@2x.png"       width="1536" height="2048"/>
    <splash src="Default-Landscape@2x.png"      width="2048" height="1536"/>
  </platform>

  <platform name="winphone">
    <splash src="logo768x1024.jpg"/>
  </platform>

  <!--plugin name="cordova-plugin-file" spec="4.3.0"/-->
  <!--plugin name="cordova-plugin-x-socialsharing" spec="5.1.3"/-->
  <plugin name="cordova-plugin-globalization" spec="1.0.4"/>
  <plugin name="cordova-plugin-inappbrowser" spec="1.5.0"/>
  <plugin name="cordova-plugin-whitelist" spec="1.3.0"/>
  <plugin name="cordova-plugin-statusbar" spec="2.2.0"/>
  <plugin name="cordova-plugin-exitapp" spec="1.0.0"/>
  <plugin name="phonegap-plugin-push" spec="1.9.0">
    <param name="SENDER_ID" value="868580530265"/>
  </plugin>

  <access origin="*" launch-external="yes"/>

  <config-file platform="ios" parent="UIStatusBarHidden">
    <true/>
  </config-file>
  <config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
    <false/>
  </config-file>

  <config-file platform="winphone" parent="/Deployment" mode="replace">
    <Languages xmlns="">
      <Language code="ru-RU"/>

    </Languages>
    <DefaultLanguage xmlns="" code="ru-RU"/>
  </config-file>

</widget>